!!! 5

%html
%head
    %title Likor
    
    / BOOTSTRAP
    = stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', type: 'text/css'
    
    = stylesheet_link_tag 'home'
    
    /= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
  
    
    
    = javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js'
    
    / FONT AWESOME
    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"
    
    / CUSTOM FONT
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Raleway:400,100,300,500,700,900', type: 'text/css'
    
    = csrf_meta_tags
    
    /= favicon_link_tag 'favicon.ico'
    
%body
    .container-fluid
        .pull-right
            - if !user_signed_in?
                = link_to login_path do 
                    %i.fa.fa-sign-in
            - else
                = link_to dashboard_path do
                    %i.fa.fa-arrow-circle-right
                    Go to Dashboard
    
    = yield