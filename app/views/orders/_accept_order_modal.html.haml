#accept-order.modal.fade{"aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
    .modal-dialog{:role => "document"}
        .modal-content
            .modal-header
                %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                    %span{"aria-hidden" => "true"} Ã—
                %h4#myModalLabel.modal-title 
                    %i.fa.fa-warning
                    Accept This Order?
            
            = form_tag({controller: "orders", action: "accept_order"}, method: "get", remote: true) do
                .modal-body
                    // ERROR MESSAGES
                    .error_messages
                    
                    .form-group
                        = hidden_field_tag(:id, @order.id)
                        = label_tag 'Order'
                        = text_field_tag :token, @order.token, class: 'form-control', disabled: true
    
                    %p.text-center
                        By accepting this order you accept taking the responsibility of delivering the client's requested products
                        to their specified address on time.
                    
        
                .modal-footer
                    = submit_tag 'Accept Order', class: 'btn btn-primary'
                    %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Cancel