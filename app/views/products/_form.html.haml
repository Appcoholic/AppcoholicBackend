= form_for @product do |f|
    .well
        .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control'
        
        .form-group
            = f.label :product_id, 'Product ID'
            = f.text_field :product_id, class: 'form-control'
            
        .form-group
            = f.label :unit_price
            = f.text_field :unit_price, class: 'form-control'
            
        .form-group
            = f.label :description
            = f.text_area :description, rows: 5, class: 'form-control'
            
        .form-group
            = f.label :photo
            = f.file_field :photo
            
        .form-group
            = f.submit ( f.object.new_record? ? "Add Product" : "Save Changes"), class: 'btn btn-success'
            = link_to 'Cancel', :back, class: 'btn btn-default'
        